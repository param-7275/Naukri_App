  <div class="container">
    <% if @recruiter_jobs.any? %>
      <% @recruiter_jobs.each do |job| %>
        <div class="job-card">
          <h2 id="title-<%= job.id %>"><%= job.title %></h2>
          <span class="read-more" onclick="toggleText('title-<%= job.id %>')"></span>

          <h3 id="desc-<%= job.id %>"><%= job.description %></h3>
          <span class="read-more" onclick="toggleText('desc-<%= job.id %>')"></span>

          <p id="company-<%= job.id %>"><%= t('jobs.index.company_name') %> : <%= job.company_name %></p>
          <p id="industry-<%= job.id %>"><%= t('jobs.index.industry_type') %> : <%= job.industry_type %></p>
          <p id="location-<%= job.id %>"><%= t('jobs.index.location') %> : <%= job.location %></p>
          <p class="vacancy" id="vacancy-<%= job.id %>"><%= t('jobs.index.vacancy') %> : <%= job.vacancy %></p>
        <%= link_to t('jobs.index.edit_job'), edit_job_path(job, locale: I18n.locale), class: 'edit-button' %>
          </n>
         <%= button_to t('jobs.index.delete'), delete_job_path(job, locale: I18n.locale), method: :delete %>
        </div>
      <% end %>
    <% else %>
      <div class="no-jobs-message">
        <h2><%= t('jobs.index.no_jobs_title', default: "No Jobs Found") %></h2>
        <p><%= t('jobs.index.no_jobs_message', default: "You haven't posted any jobs yet. Start by adding a new job to attract candidates!") %></p>
        <%= link_to t('jobs.index.add_job', default: "Post New Job"), new_job_path, class: "add-job-button" %>
      </div>
    <% end %>
  </div>

  <script>
    function toggleText(id) {
      const el = document.getElementById(id);
      el.classList.toggle('show-more');
    }
  </script>
</body>
