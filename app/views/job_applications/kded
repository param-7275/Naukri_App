<%= link_to t('jobs.index.edit_job'), edit_job_path(job, locale: I18n.locale), class: 'edit-button' %>
          </n>
         <%= button_to t('jobs.index.delete'), delete_job_path(job, locale: I18n.locale), method: :delete %>


<% job_application = job.job_applications.find_by(jobseeker_id: current_user.id) %>

          <% if job_application.present? && job_application.updated_at > 3.months.ago %>
            <span class="action-link disabled"><%= t('jobs.index.already_applied') %></span>
            <p><strong><%= t('jobs.index.status') %>:</strong> <%= t("jobs.applicants.status_options.#{job_application.status}") %></p>
            <% if job_application.status == 'reject' %>
              <p><%= t('jobs.index.can_apply_again') %></p>
            <% end %>
          <% else %>
            <%= link_to t('jobs.index.apply_job'), new_job_application_path(job_id: job.id, locale: I18n.locale), class: 'action-link' %>
          <% end %>