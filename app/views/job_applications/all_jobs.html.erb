<%= render partial: 'partials/header' %>

<!DOCTYPE html>
<html>
<head>
  <title>Items</title>
  <style>
    .container {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
    }

    .item {
      width: 30%;
      margin: 10px;
      padding: 10px;
      background-color: #f0f0f0; 
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
      color: #333; 
    }

    p {
      color: #666;
    }

    .price {
      color: #009688;
      font-weight: bold;
    }

    @media screen and (max-width: 992px) {
      .item {
        width: 45%;
      }
    }

    @media screen and (max-width: 600px) {
      .item {
        width: 90%;
      }
    }
  </style>
</head>
  <body>
    <div class="container">
      <% @jobs.each do |job| %>
        <div class="item">
        
          <h2>Job Title : <%= job.title %></h2>
          <h3>Job Description : <%= job.description %></h3>
          <p>Company Name : <%= job.company_name %></p>
          <p>Industry Type : <%= job.industry_type %></p>
          <p>Location : <%= job.location %></p>
          <p>Vacancy : <%= job.vacancy %></p>
          <% job_application = job.job_applications.find_by(jobseeker_id: current_user.id) %>
          <% if job_application.present? && job_application.updated_at > 3.months.ago %>
            <%= link_to 'Already Applied', '#', class: 'edit-button disabled' %>
            <p>Status : <%= job_application.status %></p>
            <% if job_application.status == 'reject' %>
              <p>You can apply again after 3 months</p>
            <% end %>
          <% else %>
            <%= link_to 'Apply Job', new_job_application_path(job), class: 'edit-button' %>
          <% end %>
        </div>
      <% end %>
    </div>  
  </body>
</html>