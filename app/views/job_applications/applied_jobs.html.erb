<%= render partial: 'partials/header' %>

<!DOCTYPE html>

<html>
<head>
  <title>Items</title>
  <style>
    .container {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
    }

    .item {
      width: 30%;
      margin: 10px;
      padding: 10px;
      background-color: #f0f0f0;ßß
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
      color: #333;
    }

    p {
      color: #666;
    }

    .price {
      color: #009688;
      font-weight: bold;
    }

    @media screen and (max-width: 992px) {
      .item {
        width: 45%;
      }
    }

    @media screen and (max-width: 600px) {
      .item {
        width: 90%;
      }
    }
  </style>
</head>
  <body>
    <div class="container">
      <% if @applications.any? %>
        <% @applications.each do |application| %>
          <div class="item">
            <h2><%= t('jobs.index.job_title') %> : <%= application.job.title %></h2>
            <h3><%= t('jobs.index.job_description') %> : <%= application.job.description %></h3>
            <p><%= t('jobs.index.company_name') %> : <%= application.job.company_name %></p>
            <p><%= t('jobs.index.industry_type') %> : <%= application.job.industry_type %></p>
            <p><%= t('jobs.index.location') %> : <%= application.job.location %></p>
            <p><%= t('jobs.index.vacancy') %> : <%= application.job.vacancy %></p>
            <p><%= t('jobs.index.status') %> : <%= application.status %></p>
          </div>
        <% end %>
      <% else %>
        <h1> <%= t('job_applications.applied_jobs.empty') %> </h1>
      <% end %>
    </div>  
  </body>
</html>