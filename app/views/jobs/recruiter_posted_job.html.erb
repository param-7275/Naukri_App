<%= render partial: 'partials/header' %>

<!DOCTYPE html>

<html>
<head>
  <title>Items</title>
  <style>
    /* Add CSS styles for item display */
    .container {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-around;
    }

    .item {
      width: 30%;
      margin: 10px;
      padding: 10px;
      background-color: #f0f0f0; /* Light gray background */
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Soft shadow effect */
    }

    h2 {
      color: #333; /* Dark gray text color */
    }

    p {
      color: #666; /* Medium gray text color */
    }

    .price {
      color: #009688; /* Green text color for price */
      font-weight: bold;
    }

    @media screen and (max-width: 992px) {
      .item {
        width: 45%;
      }
    }

    @media screen and (max-width: 600px) {
      .item {
        width: 90%;
      }
    }
  </style>
</head>
  <body>
    <div class="container">
      <% @jobs.each do |job| %>
        <div class="item">
        
          <h2>Job Title : <%= job.title %></h2>
          <h3>Job Description : <%= job.description %></h3>
          <p>Company Name : <%= job.company_name %></p>
          <p>Industry Type : <%= job.industry_type %></p>
          <p>Location : <%= job.location %></p>
          <p>Vacancy : <%= job.vacancy %></p>
          <%= link_to 'Apply', job_applications_path(job), method: :post, class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>  
  </body>
</html>