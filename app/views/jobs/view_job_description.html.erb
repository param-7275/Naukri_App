<%= render partial: 'partials/header' %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Job Description - <%= @job&.title || 'Job Portal' %></title>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
      font-family: "Inter", "Segoe UI", Roboto, Arial, sans-serif;
      color: #222;
      line-height: 1.6;
      padding: 2rem 1rem;
      min-height: 100vh;
    }

    .container {
      max-width: 1200px;
      margin: 6rem auto 2rem;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: #882727;
      text-decoration: none;
      font-weight: 500;
      margin-bottom: 1.5rem;
      transition: color 0.3s ease;
    }

    .back-link:hover {
      color: #aa2b2b;
      text-decoration: underline;
    }

    .back-link svg {
      width: 18px;
      height: 18px;
    }

    .job-detail-card {
      background: white;
      border-radius: 16px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      padding: 2.5rem;
      margin-bottom: 1.5rem;
    }

    .job-header {
      border-bottom: 2px solid #f0f0f0;
      padding-bottom: 1.5rem;
      margin-bottom: 2rem;
    }

    .job-title {
      font-size: 2rem;
      font-weight: 700;
      color: #882727;
      margin-bottom: 1rem;
      line-height: 1.3;
    }

    .job-meta {
      display: flex;
      flex-wrap: wrap;
      gap: 2rem;
      margin-top: 1rem;
    }

    .meta-item {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      color: #555;
      font-size: 0.95rem;
    }

    .meta-item svg {
      width: 20px;
      height: 20px;
      color: #882727;
      flex-shrink: 0;
    }

    .meta-item strong {
      color: #333;
      margin-right: 0.3rem;
    }

    .section {
      margin-bottom: 2rem;
    }

    .section-title {
      font-size: 1.3rem;
      font-weight: 700;
      color: #333;
      margin-bottom: 1rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .section-title svg {
      width: 24px;
      height: 24px;
      color: #882727;
    }

    .section-content {
      color: #555;
      font-size: 1rem;
      line-height: 1.8;
    }

    .description-wrapper {
      position: relative;
    }

    .description-text {
      color: #555;
      font-size: 1rem;
      line-height: 1.8;
      white-space: pre-wrap;
      word-wrap: break-word;
    }

    .description-text.collapsed {
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .read-more-btn {
      display: inline-flex;
      align-items: center;
      gap: 0.3rem;
      color: #882727;
      background: none;
      border: none;
      font-size: 0.95rem;
      font-weight: 600;
      cursor: pointer;
      margin-top: 0.8rem;
      padding: 0.5rem 0;
      transition: color 0.3s ease;
    }

    .read-more-btn:hover {
      color: #aa2b2b;
      text-decoration: underline;
    }

    .read-more-btn svg {
      width: 16px;
      height: 16px;
      transition: transform 0.3s ease;
    }

    .read-more-btn.expanded svg {
      transform: rotate(180deg);
    }

    .info-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-top: 1rem;
    }

    .info-item {
      display: flex;
      align-items: flex-start;
      gap: 0.8rem;
      padding: 1rem;
      background: #f8f9fa;
      border-radius: 10px;
      border-left: 4px solid #882727;
    }

    .info-item-icon {
      width: 24px;
      height: 24px;
      color: #882727;
      flex-shrink: 0;
      margin-top: 0.2rem;
    }

    .info-item-content {
      flex: 1;
    }

    .info-item-label {
      font-size: 0.85rem;
      color: #888;
      margin-bottom: 0.3rem;
      font-weight: 500;
    }

    .info-item-value {
      font-size: 1rem;
      color: #333;
      font-weight: 600;
    }

    .vacancy-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: linear-gradient(135deg, #009688 0%, #00796b 100%);
      color: white;
      padding: 0.6rem 1.2rem;
      border-radius: 25px;
      font-size: 0.95rem;
      font-weight: 600;
    }

    .vacancy-badge svg {
      width: 18px;
      height: 18px;
    }

    .action-buttons {
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
      padding-top: 2rem;
      border-top: 2px solid #f0f0f0;
    }

    .btn {
      padding: 0.85rem 2rem;
      border-radius: 8px;
      font-weight: 600;
      font-size: 1rem;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      border: none;
    }

    .btn-primary {
      background: linear-gradient(135deg, #882727 0%, #aa2b2b 100%);
      color: white;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(136, 39, 39, 0.3);
    }

    .btn-success {
      background: linear-gradient(135deg, #2e7d32 0%, #388e3c 100%);
      color: white;
    }

    .btn-success:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(46, 125, 50, 0.3);
    }

    .btn-danger {
      background: linear-gradient(135deg, #b71c1c 0%, #d32f2f 100%);
      color: white;
    }

    .btn-danger:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(183, 28, 28, 0.3);
    }

    .btn svg {
      width: 18px;
      height: 18px;
    }

    .no-job-message {
      text-align: center;
      padding: 5rem 2rem;
      background: white;
      border-radius: 16px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .no-job-message h2 {
      color: #882727;
      font-size: 1.8rem;
      margin-bottom: 1rem;
    }

    .no-job-message p {
      color: #666;
      font-size: 1.1rem;
    }

    @media (max-width: 768px) {
      body {
        padding: 1rem 0.5rem;
      }

      .job-detail-card {
        padding: 1.5rem;
      }

      .job-title {
        font-size: 1.5rem;
      }

      .job-meta {
        flex-direction: column;
        gap: 1rem;
      }

      .action-buttons {
        flex-direction: column;
      }

      .btn {
        width: 100%;
        justify-content: center;
      }
    }

    .already-applied-badge {
      padding: 0.75rem 1.5rem;
      background: linear-gradient(135deg, #4caf50 0%, #388e3c 100%);
      color: white;
      border-radius: 8px;
      font-weight: 600;
      font-size: 0.95rem;
      text-align: center;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
    }

    .already-applied-badge svg {
      width: 20px;
      height: 20px;
    }

  .apply-btn {
      flex: 1;
      padding: 0.75rem 1.5rem;
      background: linear-gradient(135deg, #882727 0%, #aa2b2b 100%);
      color: white;
      border: none;
      border-radius: 8px;
      font-weight: 600;
      font-size: 0.95rem;
      cursor: pointer;
      transition: all 0.3s ease;
      text-align: center;
      text-decoration: none;
      display: block;
    }

    .description-text.collapsed {
      max-height: 120px;
      overflow: hidden;
    }

    .extra-details {
      transition: all 0.3s ease;
    }

  </style>
</head>
<body>
  <div class="container">
    <% if @job.present? %>
      <% if current_user.role == 'recruiter' %>
        <a href="<%= recruiter_jobs_path %>" class="back-link">
          <svg fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
          Back to Jobs
        </a>
      <% end %>

      <div class="job-detail-card">
        <div class="job-header">
          <h1 class="job-title"><%= @job.title %></h1>

          <div class="job-meta">
            <div class="meta-item">
              <svg fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 01.557 1.04l1.54 4.4a1 1 0 01-.286 1.06l-1.57 1.569a1 1 0 01-1.106.217l-2.845-1.04a1 1 0 00-.888 0l-2.845 1.04a1 1 0 01-1.106-.217l-1.57-1.569a1 1 0 01-.286-1.06l1.54-4.4a1 1 0 01.557-1.04l1.94-.831-.667-1.714a1 1 0 110-1.838l-4-1.714a1 1 0 01-.356-.257L2.894 7.081a1 1 0 000-1.838l7-3z" />
              </svg>
              <strong><%= t('jobs.index.company_name') %>:</strong>
              <span><%= @job.company_name %></span>
            </div>

            <div class="meta-item">
              <svg fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
              </svg>
              <strong><%= t('jobs.index.location') %>:</strong>
              <span><%= @job.location %></span>
            </div>

            <div class="meta-item">
              <svg fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
                <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
              </svg>
              <strong><%= t('jobs.index.industry_type') %>:</strong>
              <span><%= @job.industry_type %></span>
            </div>

            <div class="meta-item">
              <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20" width="18" height="18">
                <path d="M6 2a2 2 0 00-2 2v2H3a1 1 0 00-1 1v9a2 2 0 002 2h12a2 2 0 002-2V7a1 1 0 00-1-1h-1V4a2 2 0 00-2-2H6zm0 2h8v2H6V4zm11 5H3v7h14V9z" />
              </svg>
              <strong>Posted At:</strong>
              <% if @job.created_at.to_date == Date.today %>
                <span>Today</span>
              <% else %>
                <span><%= time_ago_in_words(@job.created_at) %> ago</span>
              <% end %>
            </div>

            <div class="meta-item">
              <div class="vacancy-badge">
                <svg fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                </svg>
                <%= t('jobs.index.vacancy') %>: <%= @job.vacancy %>
              </div>
            </div>
          </div>
        </div>

        <div class="section">
          <h2 class="section-title">
            <svg fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
              <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
            </svg>
            Job Description
          </h2>

          <div class="description-wrapper">
            <div class="description-text collapsed" id="jobDescription">
              <%= @job.description %>
            </div>

            <div class="extra-details" id="extraDetails" style="display: none; margin-top: 1em;">
              <p><strong>Role Category:</strong> <%= @job.role_category.presence || "Not specified" %></p>
              <p><strong>Employment Type:</strong> <%= @job.employment_type.presence || "Not specified" %></p>
              <p><strong>Experience Range:</strong> <%= @job.experience_range.presence || "Not specified" %></p>
              <p><strong>Education:</strong> <%= @job.education.presence || "Not specified" %></p>
              <p><strong>Work Mode:</strong> <%= @job.work_mode.presence || "Not specified" %></p>
              <p><strong>Salary:</strong> <%= @job.salary.presence || "Not Disclosed" %></p>
              <p><strong>Skills:</strong> <%= @job.skills.presence || "Not specified" %></p><br>
              <p><strong>About Company:</strong> <%= @job.company_description.presence || "Not available" %></p>
            </div>

            <button class="read-more-btn" id="readMoreBtn" onclick="toggleDescription()">
              <span id="readMoreText">Read More</span>
              <svg fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        </div>

        <div class="section">
          <h2 class="section-title">
            <svg fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
              <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm9.707 5.707a1 1 0 00-1.414-1.414L9 12.586l-1.293-1.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            Job Details
          </h2>

          <div class="info-grid">
            <div class="info-item">
              <svg class="info-item-icon" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 01.557 1.04l1.54 4.4a1 1 0 01-.286 1.06l-1.57 1.569a1 1 0 01-1.106.217l-2.845-1.04a1 1 0 00-.888 0l-2.845 1.04a1 1 0 01-1.106-.217l-1.57-1.569a1 1 0 01-.286-1.06l1.54-4.4a1 1 0 01.557-1.04l1.94-.831-.667-1.714a1 1 0 110-1.838l-4-1.714a1 1 0 01-.356-.257L2.894 7.081a1 1 0 000-1.838l7-3z" />
              </svg>
              <div class="info-item-content">
                <div class="info-item-label">Company</div>
                <div class="info-item-value"><%= @job.company_name %></div>
              </div>
            </div>

            <div class="info-item">
              <svg class="info-item-icon" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
              </svg>
              <div class="info-item-content">
                <div class="info-item-label">Location</div>
                <div class="info-item-value"><%= @job.location %></div>
              </div>
            </div>

            <div class="info-item">
              <svg class="info-item-icon" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z" />
                <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd" />
              </svg>
              <div class="info-item-content">
                <div class="info-item-label">Industry</div>
                <div class="info-item-value"><%= @job.industry_type %></div>
              </div>
            </div>

            <div class="info-item">
              <svg class="info-item-icon" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
              </svg>
              <div class="info-item-content">
                <div class="info-item-label">Vacancy</div>
                <div class="info-item-value"><%= @job.vacancy %> positions</div>
              </div>
            </div>
          </div>
        </div>

        <% if current_user.role == 'recruiter' %>
          <div class="action-buttons">
            <%= link_to edit_job_path(@job, locale: I18n.locale), class: 'btn btn-success' do %>
              <svg fill="currentColor" viewBox="0 0 20 20">
                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
              </svg>
              <%= t('jobs.index.edit_job') %>
            <% end %>

            <%= button_to delete_job_path(@job, locale: I18n.locale),
                          method: :delete,
                          data: { confirm: t('jobs.index.confirm_delete') },
                          class: 'btn btn-danger' do %>
              <svg fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
              <%= t('jobs.index.delete') %>
            <% end %>
          </div>
        <% else %>
          <% recent_application = @job.job_applications.where('updated_at > ?', 3.months.ago).first %>
          <% is_applied = recent_application.present? %>

          <div class="action-section">
            <% if is_applied %>
              <div class="already-applied-badge">
                <svg fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <%= t('jobs.index.already_applied') %>
              </div>
            <% else %>
              <%= link_to t('jobs.index.apply_job'),
                new_job_application_path(job_id: @job.id, locale: I18n.locale),
                class: 'apply-btn',
                onclick: 'event.stopPropagation()' %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="no-job-message">
        <h2><%= t('jobs.index.no_job_found') %></h2>
        <p>The job you're looking for doesn't exist or has been removed.</p>
      </div>
    <% end %>
  </div>

  <script>
    function toggleDescription() {
      const descriptionEl = document.getElementById('jobDescription');
      const readMoreBtn = document.getElementById('readMoreBtn');
      const readMoreText = document.getElementById('readMoreText');
      
      if (descriptionEl.classList.contains('collapsed')) {
        descriptionEl.classList.remove('collapsed');
        readMoreBtn.classList.add('expanded');
        readMoreText.textContent = 'Show Less';
      } else {
        descriptionEl.classList.add('collapsed');
        readMoreBtn.classList.remove('expanded');
        readMoreText.textContent = 'Read More';
      }
    }

    document.addEventListener('DOMContentLoaded', function() {
      const descriptionEl = document.getElementById('jobDescription');
      if (descriptionEl) {
        const fullText = descriptionEl.textContent.trim();
        const lines = fullText.split('\n').filter(line => line.trim());
        
        if (lines.length <= 3 && fullText.length <= 150) {
          const readMoreBtn = document.getElementById('readMoreBtn');
          if (readMoreBtn) {
            readMoreBtn.style.display = 'none';
          }
        }
      }
    });

    document.addEventListener('turbo:load', function() {
      const descriptionEl = document.getElementById('jobDescription');
      if (descriptionEl) {
        const fullText = descriptionEl.textContent.trim();
        const lines = fullText.split('\n').filter(line => line.trim());
        
        if (lines.length <= 3 && fullText.length <= 150) {
          const readMoreBtn = document.getElementById('readMoreBtn');
          if (readMoreBtn) {
            readMoreBtn.style.display = 'none';
          }
        }
      }
    });

    function toggleDescription() {
      const description = document.getElementById("jobDescription");
      const extraDetails = document.getElementById("extraDetails");
      const btnText = document.getElementById("readMoreText");

      description.classList.toggle("collapsed");

      if (extraDetails.style.display === "none") {
        extraDetails.style.display = "block";
        btnText.textContent = "Read Less";
      } else {
        extraDetails.style.display = "none";
        btnText.textContent = "Read More";
      }
    }
  </script>
