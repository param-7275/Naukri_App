 <div class="form-group">
      <%= form.label :description, t('jobs.common.placeholders.description'), class: 'form-label' %>
      <%= form.text_area :description, class: 'form-textarea', placeholder: t('jobs.common.placeholders.description'), required: true, data: { ai_generator_target: "description" } %>
      <%= button_tag "Generate with AI", type: "button",
                    data: { action: "click->ai_generator#generateWithAI",
                            ai_generator_target: "button" } %>
    </div>



    <div data-controller="ai-generator">
      <%= form.text_field :title, data: { ai_generator_target: "title" } %>
      <%= form.text_area :description, data: { ai_generator_target: "description" } %>
      <%= button_tag "Generate with AI",
            type: "button",
            data: {
              action: "click->ai-generator#generateWithAI",
              ai_generator_target: "button"
            } %>
    </div>


